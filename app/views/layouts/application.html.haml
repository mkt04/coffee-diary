!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= full_title(page_title: yield(:title))
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .ui.menu.fixed
      .ui.container
        = link_to articles_path, {class: :item} do
          %i.coffee.icon
          %span.header-menu-description 日記一覧
        = link_to new_article_path, {class: :item} do
          %i.pencil.alternate.icon
          %span.header-menu-description 新しい日記
        -#.ui.simple.dropdown.item
          More
          %i.dropdown.icon
          .menu
            %a.item
              %i.edit.icon
              Edit Profile
            %a.item
              %i.settings.icon
              Account Settings
        .right.item.header-menu-search
          .ui.input
            %input.js-search-keyword{:placeholder => "検索...", :type => "text"}
            .js-search-conditions.ui.segment{style: "position: absolute; top: -20px; right: 0px; width: 320px; height: 300px; background-color: white; z-index: 1000; display: none;"}
              .content
                %p
              .actions
                .ui.button 検索
            .js-search-conditions-overlay{style: "position: fixed; top: 0px; left: 0px; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0); z-index: 100; display: none;"}

    .ui.container.body-content
      - if notice.present?
        %p#notice
          %i.check.circle.icon
          = notice

      = yield

    :javascript
      $(function(){
        $(".js-search-keyword").on('focus', function(){
          $('.js-search-conditions').show();
          $('.js-search-conditions-overlay').show();
        });
        $(".js-search-conditions-overlay").on('click', function(){
          $('.js-search-conditions').hide();
          $(this).hide();
        });
      });
