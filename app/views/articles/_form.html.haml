= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :shop_name
    = f.text_field :shop_name
  .field
    = f.label :bean_name
    = f.text_field :bean_name
  .field
    = f.label :producing_area
    = f.text_field :producing_area
  .field
    = f.label :particle_size
    = f.text_field :particle_size
  .field
    = f.label :memo
    = f.text_area :memo
  .field
    = f.label :photos
    = f.file_field :photos
  .field
    = f.label :want_to_again
    = f.check_box :want_to_again
  .actions
    = f.submit 'Save'
